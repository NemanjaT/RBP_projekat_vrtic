        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="10,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="23" Margin="135,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="268,72,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAdd" Content="DODAJ" HorizontalAlignment="Left" Margin="220,239,0,0" VerticalAlignment="Top" Width="74" Click="button_Click"/>
