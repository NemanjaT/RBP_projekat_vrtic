        <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Height="82" Margin="117,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="267" RenderTransformOrigin="0.5,0.5">
