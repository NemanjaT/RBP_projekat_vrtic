                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.108"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.248"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="label5" Content="Ime grupe:" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label6" Content="Sprat:" HorizontalAlignment="Left" Margin="150,271,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label7" Content="Vaspitači:" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label6_Copy" Content="Cena:" HorizontalAlignment="Left" Margin="260,271,0,0" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="txtTeachers" HorizontalAlignment="Left" Height="83" Margin="10,367,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
        <TextBox x:Name="txtGroupFloor" HorizontalAlignment="Left" Height="23" Margin="150,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40"/>
        <TextBox x:Name="txtGroupPrice" HorizontalAlignment="Left" Height="23" Margin="260,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92"/>

        <Button x:Name="btnAddGroup" Content="DODAJ" HorizontalAlignment="Left" Margin="220,455,0,0" VerticalAlignment="Top" Width="74" Click="btnAddGroup_Click"/>
        <TextBox x:Name="txtGroupName" HorizontalAlignment="Left" Height="23" Margin="10,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126"/>

    </Grid>
</Window>
