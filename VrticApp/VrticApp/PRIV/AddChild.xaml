        xmlns:local="clr-namespace:VrticApp"
        mc:Ignorable="d"
        Title="AddChild" Height="516.05" Width="422.5">
    <Grid>
        <Label x:Name="label" Content="Unesite podatke o detetu" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Ime:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
