<Window x:Class="VrticApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VrticApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lblUserName" Content="Korisničko ime:" HorizontalAlignment="Left" Margin="54,80,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Lozinka:" HorizontalAlignment="Left" Margin="54,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="166,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="166,129,0,0" VerticalAlignment="Top" Width="120" Height="23" RenderTransformOrigin="0.492,0.478"/>
        <Button x:Name="btnLogIn" Content="Uloguj se" HorizontalAlignment="Left" Margin="166,197,0,0" VerticalAlignment="Top" Width="120" Click="btnLogIn_Click"/>
        <Label x:Name="label" Content="Vrtić ,,Višer&quot;" HorizontalAlignment="Left" Margin="189,22,0,0" VerticalAlignment="Top" Width="80"/>

    </Grid>
</Window>
